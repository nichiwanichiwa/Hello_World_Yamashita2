<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:text="設定"
        android:id="@+id/settingbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="今日は"
        android:id="@+id/text1"
        android:layout_alignTop="@+id/TextDay"
        android:layout_toStartOf="@+id/TextDay" />

    <Button
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:text="ホーム"
        android:id="@+id/home"
        android:layout_alignBottom="@+id/settingbutton"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000年00月00日"
        android:id="@+id/TextDay"
        android:layout_marginBottom="75dp"
        android:layout_above="@+id/hijousyoku"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="です"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/TextDay"
        android:layout_toEndOf="@+id/TextDay" />

    <Button
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:text="非常食"
        android:id="@+id/hijousyoku"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/home" />

    <Button
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:text="備蓄品"
        android:id="@+id/bichiku"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/settingbutton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/L_graph"
        android:src="@drawable/l_graph0"
        android:scaleType="fitXY"
        android:layout_below="@+id/textView17"
        android:layout_alignEnd="@+id/hijousyoku" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/R_graph"
        android:src="@drawable/r_graph0"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/L_graph"
        android:layout_toEndOf="@+id/hijousyoku" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="非常食"
        android:id="@+id/textView17"
        android:layout_marginEnd="7dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/TextDay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="防災グッズ"
        android:id="@+id/textView18"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/R_graph"
        android:layout_marginEnd="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="要チェック"
        android:id="@+id/textView"
        android:layout_below="@+id/hijou_text"
        android:layout_alignEnd="@+id/home"
        android:layout_marginTop="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="合計個数:0000個"
        android:id="@+id/bichiku_text"
        android:layout_alignTop="@+id/hijou_text"
        android:layout_alignEnd="@+id/R_graph"
        android:layout_marginEnd="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="合計個数:0000個"
        android:id="@+id/hijou_text"
        android:layout_below="@+id/L_graph"
        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="19dp" />

</RelativeLayout>
